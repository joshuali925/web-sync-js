<!DOCTYPE html>
<div class="container-fluid">
  <div class="form-group">
    <textarea class="form-control" id="textarea" style="height: 70vh"></textarea>
  </div>
  <div class="alert alert-success" role="alert" id="alert" style="display: none; position: absolute; z-index: 1000;"></div>
  <div class="flex-container">
    <button type="button" onclick="copy_all()" id="copybutton" class="btn btn-success"><i
      class="fa fa-clipboard"></i> Copy</button>
    <button type="button" onclick="generate_qr()" class="btn btn-success" data-toggle="modal" data-target="#exampleModalCenter">
      <i class="fa fa-qrcode"></i> QR Code</button>
    <button type="button" onclick="clear_all()" id="clearbutton" class="btn btn-danger"><i
      class="fa fa-trash-o"></i> Clear</button>
    <div class="btn-group btn-group-toggle" data-toggle="buttons">
      <label class="btn btn-outline-secondary active" id="label1">
        <input type="radio" name="options" id="focus1" checked> 1
      </label>
      <label class="btn btn-outline-secondary" id="label2">
        <input type="radio" name="options" id="focus2"> 2
      </label>
      <label class="btn btn-outline-secondary" id="label3">
        <input type="radio" name="options" id="focus3"> 3
      </label>
    </div>
  </div>
</div>
<div class="modal fade bd-example-modal-lg" id="exampleModalCenter" tabindex="-1" role="dialog" aria-labelledby="exampleModalCenterTitle" aria-hidden="true">
  <div class="modal-dialog modal-dialog-centered modal-lg" role="document" style="width: 534px">
    <div class="modal-content">
      <div class="modal-body">
        <div>Loading</div>
      </div>
    </div>
  </div>
</div>
<script src="syncpad.js"></script>
